<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/input_check_margin"
    android:paddingBottom="@dimen/input_check_margin"
    android:layout_marginLeft="@dimen/input_check_margin"
    android:layout_marginRight="@dimen/input_check_margin"
    android:background="@color/input_prompt_check">

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_check"/>

</LinearLayout>