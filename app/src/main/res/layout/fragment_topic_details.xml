<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/topic_details_bg"
    tools:context="com.tas.speech.sections.topic.TopicDetailsFragment">

    <RelativeLayout
        android:id="@+id/rl_topic_details"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/topic_details_box"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@+id/iv_topic_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_interview"/>

            <TextView
                android:id="@+id/tv_topic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/iv_topic_icon"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/topic_details_type"
                android:textStyle="bold"
                android:text="Interview" />

            <TextView
                android:id="@+id/tv_average_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_topic_type"
                android:text="Average Score: 76%"/>

            <TextView
                android:id="@+id/tv_minutes_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_average_score"
                android:text="Minutes Spent: 1:26h"/>

            <TextView
                android:id="@+id/tv_exercises"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_minutes_spent"
                android:text="2 Exercises"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
